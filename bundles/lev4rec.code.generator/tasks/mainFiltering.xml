<?xml version="1.0" encoding="UTF-8"?>
<project default="mainFiltering" name="it.disim.univaq.lowcode.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/jee-2020-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="it.disim.univaq.lowcode.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/it.disim.univaq.lowcode.acceleo/bin"/>
    </path>

    <path id="it.disim.univaq.lowcode.acceleo.classpath">
        <path refid="it.disim.univaq.lowcode.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="it.disim.univaq.lowcode.acceleo.libraryclasspath.alljars">
        <pathelement location="../it.disim.univaq.lowcode.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="it.disim.univaq.lowcode.acceleo.classpath.alljars">
        <path refid="it.disim.univaq.lowcode.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="mainFiltering">
        <java classname="it.disim.univaq.lowcode.acceleo.main.MainFiltering" classpathref="it.disim.univaq.lowcode.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="mainFiltering.alljars">
        <java classname="it.disim.univaq.lowcode.acceleo.main.MainFiltering" classpathref="it.disim.univaq.lowcode.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
